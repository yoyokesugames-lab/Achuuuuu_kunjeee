    <style>
        /* --- General & Message Box Styles --- */
        body {
            font-family: 'Dancing Script', cursive;
            background-color: #ffe4e1;
            color: #8b0000;
            text-align: center;
            padding: 50px;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden; 
            position: relative;
            cursor: pointer; /* Change cursor to indicate interactivity (click hearts) */
        }
        .message-box {
            background-color: #fffaf0;
            border: 5px solid #ff69b4;
            border-radius: 20px;
            padding: 40px;
            max-width: 600px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            animation: fadeIn 3s ease-in-out;
            z-index: 10; 
            position: relative;
        }
        h1 {
            color: #ff1493;
            font-size: 3em;
            margin-bottom: 20px;
        }
        p {
            font-size: 1.5em;
            line-height: 1.6;
            white-space: pre-wrap;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* --- Click/Tap Heart Animation Styles --- */
        .click-heart {
            position: fixed;
            color: #ff007f; /* Vibrant Pink */
            font-size: 40px;
            pointer-events: none;
            opacity: 0;
            z-index: 1000; /* Must be on top */
            animation: popAndFade 1s forwards;
        }

        @keyframes popAndFade {
            0% {
                transform: translate(-50%, -50%) scale(0.5);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -100px) scale(1.5); /* Floats up slightly */
                opacity: 0;
            }
        }
        
        /* --- Floating Heart Animation Styles --- */
        .heart {
            position: absolute;
            bottom: 0;
            color: #ff69b4;
            font-size: 20px;
            transform: translateY(0);
            pointer-events: none; 
            opacity: 0.8;
            animation: floatUp 6s infinite ease-in;
        }

        @keyframes floatUp {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 0.5;
            }
            50% {
                transform: translateY(-50vh) rotate(5deg);
                opacity: 1;
            }
            100% {
                transform: translateY(-100vh) rotate(-5deg);
                opacity: 0;
            }
        }
    </style>
