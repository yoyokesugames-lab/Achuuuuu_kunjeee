<body>
    <div class="message-box">
        <h1>My Achuuu ❤️</h1>
        <p>
            I love u alot and im ready to wi8 for you idk how many times im saying it but im finding different ways to say it to u ur always special to me and will be mine forever I will . I trust u alot and will treat u well more than anyone does i love u alot and I need u the most your voice is like music to my ears which calms me down and ur so so so pretty and beautiful.  My loml I love u alot
        </p>
    </div>

    <script>
        // --- 1. Floating Heart Animation ---
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '&#10084;'; // Unicode heart symbol
            
            // Randomize position, duration, and size
            heart.style.left = Math.random() * 100 + 'vw'; 
            heart.style.animationDuration = Math.random() * 4 + 4 + 's';
            heart.style.animationDelay = Math.random() * 2 + 's';
            heart.style.fontSize = Math.random() * 10 + 20 + 'px';

            document.body.appendChild(heart);

            // Remove the heart element after its animation finishes
            setTimeout(() => {
                heart.remove();
            }, 8000); 
        }
        // Create a new heart every 300 milliseconds
        setInterval(createFloatingHeart, 300);


        // --- 2. Heart Popping Animation on Click/Tap ---
        document.addEventListener('click', (e) => {
            const clickHeart = document.createElement('div');
            clickHeart.classList.add('click-heart');
            clickHeart.innerHTML = '&#10084;';
            
            // Set position based on click coordinates
            clickHeart.style.left = e.clientX + 'px';
            clickHeart.style.top = e.clientY + 'px';

            document.body.appendChild(clickHeart);

            // Remove the heart after the animation completes (1 second)
            setTimeout(() => {
                clickHeart.remove();
            }, 1000); 
        });
    </script>
</body>
